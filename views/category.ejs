<%- include("header", { title: locals.category.name, highlighting: true }) %>
		<article>
			<h1 class="mb-3"><%= locals.category.name %></h1>
			<div><%- locals.category.description %></div>
			<section class="mb-3">
				<h2>Tasks</h2>
				<div class="row row-cols-auto g-2">
				<% for (const { _id, name } of locals.category.tasks) { %>
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<div class="card text-center">
							<div class="card-body">
								<h5 class="card-title"><%= name %></h5>
								<%# <p class="card-text">Here should be some content</p> %>
								<a href="/task/<%- encodeURIComponent(_id) %>" class="btn btn-primary">Open task</a>
							</div>
						</div>
					</div>
				<% } %>
				</div>
			</section>
		</article>
<%- include("footer") %>
