<%- include("header", { title: "Register" }) %>
		<h1 class="mb-3">Register</h1>
		<form method="post">
			<div class="mb-3">
				<label for="username" class="form-label">Username</label>
				<input id="username" class="form-control" type="text" name="username" maxlength="255" required>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input id="password" class="form-control" type="password" name="password" maxlength="64" minlength="8" required aria-describedby="password-reqs">
				<div id="password-reqs" class="form-text">Password must be between 8 and 64 characters long.</div>
			</div>
			<div class="mb-3">
				<label for="password-retype" class="form-label">Retype password</label>
				<input id="password-retype" class="form-control" type="password" name="passwordRetype" required>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
		<a href="/auth/login">Log in</a>
		<script src="/static/js/password_match.js" type="module"></script>
<%- include("footer") %>
